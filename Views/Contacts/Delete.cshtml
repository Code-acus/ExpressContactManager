@model Contact

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Contact</h2>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this contact type?</p>
    <d1>
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Phone</dt>
        <dd>@Model.Phone</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>City</dt>
        <dd>@Model.City</dd>
        <dt>State</dt>
        <dd>@Model.State</dd>
        <dt>Zip</dt>
        <dd>@Model.Zip</dd>
        <dt>Notes</dt>
        <dd>@Model.Notes</dd>
        <dt>Contact Type</dt>
        <dd>@Model.ContactType</dd>
    </d1>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
