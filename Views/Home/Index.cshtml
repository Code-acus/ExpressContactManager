@using ExpressContactManager.Models
@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h2>Contacts</h2>

<p>
    <a asp-action="Create">Add New Contact</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @if (Model != null && Model.Any())
                {
                    @Html.DisplayNameFor(model => model.First().FirstName)
                }
                else
                {
                    @Html.DisplayNameFor(model => new Contact().FirstName)
                }
            </th>
            <th>
                @if (Model != null && Model.Any())
                {
                    @Html.DisplayNameFor(model => model.First().LastName)
                }
                else
                {
                    @Html.DisplayNameFor(model => new Contact().LastName)
                }
            </th>
            <th>
                @if (Model != null && Model.Any())
                {
                    @Html.DisplayNameFor(model => model.First().Email)
                }
                else
                {
                    @Html.DisplayNameFor(model => new Contact().Email)
                }
            </th>
            <th>
                @if (Model != null && Model.Any())
                {
                    @Html.DisplayNameFor(model => model.First().Phone)
                }
                else
                {
                    @Html.DisplayNameFor(model => new Contact().Phone)
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                        <tr>
                            <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                        @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="5" class="text-center">No contacts available.</td>
                </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
